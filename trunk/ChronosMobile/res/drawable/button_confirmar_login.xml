<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#CAE1FF" />
             <gradient  android:angle="-90"  android:startColor="#104E8B" android:endColor="#CAE1FF"  />            
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#CAE1FF" />
             <solid  android:color="#CAE1FF"/>       
         </shape>
     </item>  
    <item >
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#CAE1FF" />
             <gradient  android:angle="-90"  android:startColor="#4682B4" android:endColor="#CAE1FF" />            
         </shape>
     </item>
</selector>