<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    android:orientation="vertical"
    android:padding="@dimen/padding_large" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borda_1"
        android:orientation="vertical"
        android:padding="@dimen/padding_large" >

        <TextView
            style="@style/TextBoxShadowAgendamentoConfirmado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/padding_small"
            android:text="@string/lb_agendamento_confirmacao_agendamento_eletronico"
            android:textStyle="bold" />

        <TextView
            style="@style/TextBoxShadowAgendamentoConfirmado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/padding_small"
            android:text="@string/lb_agendamento_confirmacao_numero_documento"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewDocumentoCPF"
            style="@style/TextBoxShadowAgendamentoConfirmado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/padding_small" />

        <TextView
            style="@style/TextBoxShadowAgendamentoConfirmado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/padding_small"
            android:text="@string/lb_agendamento_confirmacao_unidade_atendimento" />

        <TextView
            android:id="@+id/textViewUnidadeAtendimento"
            style="@style/TextBoxShadowAgendamentoConfirmado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/padding_small"
            android:textStyle="bold" />

        <TextView
            style="@style/TextBoxShadowAgendamentoConfirmado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/padding_small"
            android:text="@string/lb_agendamento_confirmacao_servico" />

        <TextView
            android:id="@+id/textViewServico"
            style="@style/TextBoxShadowAgendamentoConfirmado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/padding_small"
            android:textStyle="bold" />

        <TextView
            style="@style/TextBoxShadowAgendamentoConfirmado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/padding_small"
            android:text="@string/lb_agendamento_confirmacao_senha" />

        <TextView
            android:id="@+id/textViewSenha"
            style="@style/TextBoxShadowAgendamentoConfirmado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/padding_small"
            android:textStyle="bold" />

        <TextView
            style="@style/TextBoxShadowAgendamentoConfirmado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/padding_small"
            android:text="@string/lb_agendamento_confirmacao_agendada"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewDataHoraAgendamento"
            style="@style/TextBoxShadowAgendamentoConfirmado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/padding_small"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_agendamento_confirmado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/button_confirmar_login"
            android:onClick="telaInicial"
            android:padding="@dimen/padding_small"
            android:text="@string/lb_OK"
            android:textColor="#FFF"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>