<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    android:orientation="vertical"
    android:padding="@dimen/padding_large" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borda_1"
        android:orientation="vertical"
        android:padding="@dimen/padding_large" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_large" >

            <CheckBox
                android:id="@+id/idCheckboxHabilitarNotificacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="habilitarOutrasOpcoes"
                android:padding="@dimen/padding_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_small"
                android:text="@string/lb_configuracao_habilitar_notificacao"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_large" >

            <CheckBox
                android:id="@+id/idCheckboxNotificacaoComSom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:padding="@dimen/padding_small" />

            <TextView
                android:id="@+id/txtCheckboxNotificacaoComSom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:padding="@dimen/padding_small"
                android:text="@string/lb_configuracao_notificacao_com_som"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_large" >

            <CheckBox
                android:id="@+id/idCheckboxNotificacaoComVibracao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:padding="@dimen/padding_small" />

            <TextView
                android:id="@+id/txtCheckboxNotificacaoComVibracao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:padding="@dimen/padding_small"
                android:text="@string/lb_configuracao_notificacao_com_vibracao"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_large" >

            <CheckBox
                android:id="@+id/idCheckboxNotificacaoAcadaXTempo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:padding="@dimen/padding_small" />

            <TextView
                android:id="@+id/txtCheckboxNotificacaoAcadaXTempo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:padding="@dimen/padding_small"
                android:text="@string/lb_configuracao_notificacao_a_cada_x_tempo"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_configuracao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_confirmar_login"
            android:padding="@dimen/padding_small"
            android:text="@string/lb_salvar"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:onClick="salvarConfiguracao" />
    </LinearLayout>

</ScrollView>